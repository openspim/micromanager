AUTOMAKE_OPTIONS = foreign subdir-objects
mmautofocus_DATA = \
	MMAutofocus.jar \
	MMAutofocusDuo.jar \
	MMAutofocusTB.jar \
	MMOughtaFocus.jar

.PHONY: autofocus.stamp

autofocus.stamp:
	@rm -f autofocus.tmp
	@touch autofocus.tmp
	$(ANT) -Dmm.javacflags="$(JAVACFLAGS)" \
		-Dmm.java.lib.imagej="$(IJJARPATH)" $(ANTFLAGS) jar
	@mv -f autofocus.tmp $@

$(mmautofocus_DATA): autofocus.stamp
	@if test -f $@; then :; else \
		rm -f autofocus.stamp; \
		$(MAKE) $(AM_MAKEFLAGS) autofocus.stamp; \
	fi

CLEANFILES = autofocus.stamp

clean-local:
	$(ANT) $(ANTFLAGS) clean
